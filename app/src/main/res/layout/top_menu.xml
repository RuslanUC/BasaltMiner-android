<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22333b"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <ScrollView
        android:id="@+id/tm_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Топ"
                android:textColor="@android:color/white"
                android:textSize="70dp" /> <!-- Title -->

            <Button
                android:id="@+id/tm_goldButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                android:onClick="topButton"
                android:text="Золото"
                android:textSize="20dp" /> <!-- Gold -->

            <Button
                android:id="@+id/tm_levelButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                android:onClick="topButton"
                android:text="Уровень"
                android:textSize="20dp" /> <!-- Level -->

            <Button
                android:id="@+id/tm_redstoneButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                android:onClick="topButton"
                android:text="Редстоун"
                android:textSize="20dp" /> <!-- Redstone -->

            <Button
                android:id="@+id/tm_winsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                android:onClick="topButton"
                android:text="Победы"
                android:textSize="20dp" /> <!-- Wins -->

            <Button
                android:id="@+id/tm_bibaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                android:onClick="topButton"
                android:text="Биба"
                android:textSize="20dp" /> <!-- Biba -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/menu_bg"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingRight="25dp">

                <TextView
                    android:id="@+id/tm_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>